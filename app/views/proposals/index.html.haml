%h1 Proposals

%ul.proposals
  - @proposals.each do |p|
    %li
      = link_to p.sock_1.name, sock_path(p.sock_1)
      |  ↔
      = link_to p.sock_2.name, sock_path(p.sock_2)
      %span.meta= " — proposed " + (p.created_at&.to_date&.to_s || "")
      .proposal-actions
        = form_with url: accept_proposal_path(p), method: :post, local: true do |f|
          = f.submit "Accept", class: "button primary"
        = form_with url: reject_proposal_path(p), method: :post, local: true, data: { confirm: "Reject this proposal?" } do |f|
          = f.submit "Reject", class: "button link"
